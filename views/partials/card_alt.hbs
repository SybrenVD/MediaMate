<div class="card h-100 shadow-sm" style="min-height: 330px; display: flex; flex-direction: column;">
  <a href="/category/{{type}}/{{id}}" class="text-decoration-none text-light" style="flex-grow: 1; display: flex; flex-direction: column;">
    <img src="{{image}}" class="card-img-top" alt="{{name}}" onerror="this.src='/images/default.png';" style="height: 180px; object-fit: cover;">
    
    <div class="card-body" style="flex-grow: 1;">
      <div class="d-flex justify-content-between">
      <h6 class="card-title">{{name}}</h6>
        {{> iheart}}       
      </div>
      <p class="card-text" style="min-height: 60px;">
        {{#if description}}{{description}}{{else}}No description{{/if}}
      </p>
    </div>
  </a>
</div>


