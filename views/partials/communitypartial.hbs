<div class="col-12 col-md-4">
  <div class="d-flex align-items-center p-3 rounded shadow-sm" style="background-color: #8b1d2e; color: white; border: 2px solid #6e1624;">
    <img src="{{this.Image}}" alt="Icon" class="me-3 rounded-circle" style="width: 40px; height: 40px;">
    <div>
      <div class="d-flex justy-content-between">
        <!-- Title in black -->
        <a class="flex-grow-1" href="../chatroom?RoomID={{this.RoomID}}" style="text-decoration: none;">
          <h5 class="mb-1" style="color: black;">Community {{this.ChatName}}</h5>
        </a>
        {{>iheart}}
      </div>
      <!-- Description in light gray -->
      <p class="mb-0" style="color: gray;">{{this.Keywords}}.</p>
    </div>
  </div>
</div>