<a href="/category/{{type}}/{{id}}?from={{from}}" style="text-decoration: none; color: inherit;">
  <div class="card h-100">
   <img src="{{img}}" alt="Card Image" class="card-img-top p-2 img-fluid" style="height: 200px; object-fit: cover; width: 100%;">

    <div class="card-body text-start">
      <div class="d-flex justify-content-between">
        <h4 class="flex-grow-1">{{#if title}}{{title}}{{else}}{{name}}{{/if}}</h4>
        {{> iheart}}       
      </div>
      <p class="clamp-3">{{description}}</p>
    </div>
  </div>
</a>





