<h2>Admin Panel</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Username</th>
      <th>Type</th>
      <th>Title</th>
      <th>Description</th>
      <th>Image</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#each requests}}
    <tr>
      <td>{{Username}}</td>
      <td>{{ContentType}}</td>
      <td>{{Title}}</td>
      <td>{{Description}}</td>
      <td><img src="{{Image}}" alt="Image" width="60" /></td>
      <td>
        <a href="/admin-panel/{{RequestID}}" class="btn btn-primary">Edit</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>

{{#if errorMessage}}
<p class="text-danger">{{errorMessage}}</p>
{{/if}}
