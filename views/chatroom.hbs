<div class="row">
  <div class="col-4">
    <div class="list-group" id="list-tab" role="tablist">
      {{#each rooms}}
        {{>groupcardpartial}}
      {{/each}}
    </div>
  </div>

  <div class="col-8">
    <div class="tab-content" id="nav-tabContent">
      {{#each rooms}}
          <div class="tab-pane fade {{#if @first}}show active{{/if}}"
             id="list-{{chatId}}"
             role="tabpanel"
             aria-labelledby="list-{{chatId}}-list">
              <div class="p-2">
                <div class="d-flex flex-row mb-3">
                  <img src="{{img}}" alt="imgChat" style="max-width: 100px; max-height: 100px;" />
                  <ul class="dropdown-menu">{{chatName}}
                  
                  </ul>
                </div>
              </div>
              <div class="p-2">
                {{#each (lookup ../messagesByRoom chatId)}}
                  {{> messagepartial}}
                {{/each}}
              </div>
          </div>
      {{/each}}
    </div>
  </div>
</div>

