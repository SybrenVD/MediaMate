<div class="container mt-5">
  <section class="faq">
    <div class="container text-center">
      <div class="row p-2">
        <h3>{{cta}}</h3>
      </div>
      <div class="row pb-5">
        <p>{{shortDescription}}</p>
      </div>
    </div>
  </section>

  <!-- Accordion for FAQs -->
  <div class="accordion mt-4" id="faqAccordion">
    {{#each faqs}}
      <div class="accordion-item">
        <h2 class="accordion-header" id="heading{{@index}}">
          <button
            class="accordion-button collapsed"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#collapse{{@index}}"
            aria-expanded="false"
            aria-controls="collapse{{@index}}"
            style="padding-left: 20px; padding-right: 20px;"> <!-- Added padding -->
            {{this.question}}
          </button>
        </h2>
        <div
          id="collapse{{@index}}"
          class="accordion-collapse collapse"
          aria-labelledby="heading{{@index}}">
          <div class="accordion-body text-muted" style="padding-left: 20px; padding-right: 20px;"> <!-- Added padding -->
            {{this.answer}}
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>
