<div class="container mt-5 text-center">
  <h1 class="text-danger mb-5">Choose Your Community</h1>

  <div class="row justify-content-center mb-5">
    <div class="col-md-6">
      <form class="d-flex" role="search">
        <div class="input-group input-group-lg">
          <span class="input-group-text bg-white border-2 border-danger rounded-start">
            <i class="bi bi-search text-danger"></i>
          </span>
          <input 
            class="form-control border-2 border-danger rounded-end" 
            type="search" 
            placeholder="Search for a community..." 
            aria-label="Search"
          >
        </div>
      </form>
    </div>
  </div>
</div>


<div class="container">
  <div class="row g-4">
    {{#each (range 1 15)}}
        {{>communitypartial}}
    {{/each}}
  </div>
</div>


