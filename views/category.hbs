<div class="container mt-5">
  <header>
    <section class="hero">
      <div class="banner" style="background-image: url('{{hero.banner}}'); background-size: cover; background-position: center; height: 400px; display: flex; justify-content: center; align-items: center;">
        <div class="text-center" style="z-index: 2;">
          <!-- ðŸ”º Search bar moved here -->
          <div class="row mb-2">
            <div class="col-12 d-flex justify-content-end">
              <form class="d-flex" role="search">
                <div class="input-group input-group-sm">
                  <span class="input-group-text bg-white border-2 border-danger rounded-start">
                    <i class="bi bi-search text-danger"></i>
                  </span>
                  <input 
                    class="form-control border-2 border-danger rounded-end" 
                    type="search" 
                    placeholder="Find your {{title}}" 
                    aria-label="Search"
                  >
                </div>
              </form>
            </div>
          </div>

          <!-- Hero text inside the banner with color #8b1d2e and black outline -->
          <h2 style="color: #8b1d2e; text-shadow: 2px 2px 4px black, -2px -2px 4px black;">{{hero.cta}}</h2>
          <p style="color: #8b1d2e; text-shadow: 2px 2px 4px black, -2px -2px 4px black;">{{hero.shortDescription}}</p>
        </div>
      </div>
    </section>
  </header>

  <!-- Remove duplicate CTA and short description from here -->
  <!-- <h1 class="text-center">{{hero.cta}}</h1> --> <!-- REMOVE THIS LINE -->
  <!-- <p class="text-center text-muted">{{hero.shortDescription}}</p> --> <!-- REMOVE THIS LINE -->

  <!-- Full-width background for "Top Rated" section -->
  <div class="bg-dark text-white p-4 mt-4" style="margin-left: -15px; margin-right: -15px;">
    <!-- Inner container for "Top Rated" content (cards) to have proper padding -->
    <div class="container" style="min-height: 100vh;">
      <!-- Title for the card grid aligned to the left with custom red color -->
      <h2 class="text-start text-danger">Top Rated</h2>

      <!-- Bootstrap Grid for cards -->
      <div class="row justify-content-center">
        {{#each items}}
          <div class="col">
            <div class="card h-100" style="background-color: #8b1d2e; color: white;">
              <img src="{{this.image}}" class="card-img-top" alt="{{this.name}}" style="min-height: 250px; object-fit: cover;">
              <div class="card-body">
                <h5 class="card-title" style="color: black;">{{this.name}}</h5>
                <p class="card-text" style="color: #808080;">{{this.description}}</p>
              </div>
            </div>
          </div>
        {{/each}}
      </div>

      <!-- "View All" Button -->
      <div class="text-center mt-4">
        <a href="#" class="btn btn-outline-danger text-danger">View All</a>
      </div>
    </div>
  </div>
</div>



