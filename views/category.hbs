<header>
  <section class="hero">
    <div class="banner">
      <div class="container text-center">
        <div class="row mb-2">
          <div class="search col-12 d-flex justify-content-end">
            <form class="d-flex" role="search">
              <div class="input-group input-group-sm">
                <span class="input-group-text bg-white border-2 border-danger rounded-start">
                  <i class="bi bi-search text-danger"></i>
                </span>
                <input class="form-control border-2 border-danger rounded-end" type="search"
                  placeholder="Find your {{title}}" aria-label="Search">
              </div>
            </form>
          </div>
        </div>

        <div class="row p-2">
          <h2>{{hero.cta}}</h2>
        </div>
        <div class="row pb-5">
          <p>{{hero.shortDescription}}</p>
        </div>

      </div>
    </div>
  </section>
</header>

