<div class="container text-center">
  <h3 class="text-start text-danger">Top Rated</h3>
  <div class="row justify-content-center">
    {{#each items}}
    <div class="col">
      <div class="card h-100" style="background-color: #8b1d2e; color: white;">
        <img src="{{this.image}}" class="card-img-top" alt="{{this.name}}"
          style="min-height: 250px; object-fit: cover;">
        <div class="card-body">
          <h5 class="card-title" style="color: black;">{{this.name}}</h5>
          <p class="card-text" style="color: #808080;">{{this.description}}</p>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>