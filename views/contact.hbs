

{{#if successMessage}}
  <div class="alert alert-success text-center" role="alert">
    {{successMessage}}
  </div>
{{/if}}

<div class="container mt-5 p-4 rounded" style="background-color: hsla(351, 70%, 38%, 0.8); color: black;">

  
  <h1 class="text-center mb-4">Contact Us</h1>
  <p class="text-center text-muted">We'd love to hear from you. Fill in the form below.</p>

  <form action="/contact" method="POST" class="mt-4 col-md-8 offset-md-2">
    
    <div class="mb-3">
   
      <label for="name" class="form-label">Name</label>
      <input type="text" class="form-control" id="name" name="name" required />
   
    </div>
   
    <div class="mb-3">
   
      <label for="email" class="form-label">Email address</label>
      <input type="email" class="form-control" id="email" name="email" required />
   
    </div>
   
    <div class="mb-3">
   
      <label for="message" class="form-label">Message</label>
      <textarea class="form-control" id="message" name="message" rows="4" required></textarea>
   
    </div>
   
    <div class="text-center">
   
      <button type="submit" class="btn btn-danger">Send</button>
   
    </div>
  
  </form>

</div>
